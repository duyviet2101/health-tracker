<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tvTargetHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MỤC TIÊU CỦA BẠN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Daily Goal Display (Nổi bật) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dailyGoalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#E8F5E9"
        app:layout_constraintTop_toBottomOf="@id/tvTargetHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MỤC TIÊU HẰNG NGÀY"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvCurrentDailyGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="600 mét"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:gravity="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">
                
                <Button
                    android:id="@+id/btnChangeDailyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Điều chỉnh mục tiêu hằng ngày"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="#4CAF50"
                    android:foreground="?attr/selectableItemBackground"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/dailyGoalCard"/>

    <!-- Subtitle for Exercise Target -->
    <TextView
        android:id="@+id/tvExerciseTargetSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MỤC TIÊU BÀI TẬP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="12dp"/>

    <!-- Distance Target Selector -->
    <LinearLayout
        android:id="@+id/distanceSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvExerciseTargetSubtitle"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/btnDecreaseDistance"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_minus"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Giảm khoảng cách" 
            android:elevation="4dp"/>

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="0.50"
            android:textSize="46sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btnIncreaseDistance"
            android:layout_width="70dp"
            android:layout_height="70dp" 
            android:src="@drawable/ic_plus"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Tăng khoảng cách"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Exercise Type Selector -->
    <LinearLayout
        android:id="@+id/exerciseTypeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/distanceSelector"
        android:layout_marginTop="36dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:tint="#666666"
            android:src="@android:drawable/ic_menu_compass"/>

        <TextView
            android:id="@+id/tvExerciseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoảng cách"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:layout_marginStart="12dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Second Exercise Type -->
    <LinearLayout
        android:id="@+id/secondExerciseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/exerciseTypeSelector"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:tint="#666666"
            android:src="@android:drawable/ic_menu_directions"/>

        <TextView
            android:id="@+id/tvSecondExerciseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chạy bộ"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:layout_marginStart="12dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Music Selection -->
    <LinearLayout
        android:id="@+id/musicSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/secondExerciseType"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:tint="#666666"
            android:src="@android:drawable/ic_media_play"/>

        <TextView
            android:id="@+id/tvMusicSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm nhạc"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:layout_marginStart="12dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Start Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <Button
            android:id="@+id/btnStartRun"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Bắt đầu"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="#673AB7"
            android:foreground="?attr/selectableItemBackground"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 