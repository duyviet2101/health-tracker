<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <!-- Header -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Quay lại"/>

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="THIẾT LẬP MỤC TIÊU"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="52dp"/> <!-- Cân đối với nút back -->

    <!-- Hiển thị mục tiêu hiện tại -->
    <TextView
        android:id="@+id/tvCurrentStepGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mục tiêu hiện tại: 2000 bước"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#388E3C"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"/>

    <!-- Daily Goal Value -->
    <TextView
        android:id="@+id/tvStepGoalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2000"
        android:textSize="64sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentStepGoal"
        android:layout_marginTop="24dp"/>
        
    <TextView
        android:id="@+id/tvDailyGoalUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bước"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvStepGoalValue"
        android:layout_marginTop="8dp"/>

    <!-- SeekBar để điều chỉnh mục tiêu -->
    <SeekBar
        android:id="@+id/seekBarStepGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:progressTint="#4CAF50"
        android:thumbTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tvDailyGoalUnit"/>

    <!-- Nhập giá trị tùy chỉnh -->
    <TextView
        android:id="@+id/tvCustomGoalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mục tiêu tùy chỉnh:"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarStepGoal"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCustomStepGoal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:hint="2000"
        app:layout_constraintTop_toTopOf="@id/tvCustomGoalLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvCustomGoalLabel"
        app:layout_constraintStart_toEndOf="@id/tvCustomGoalLabel"/>

    <TextView
        android:id="@+id/tvStepUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bước"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/etCustomStepGoal"
        app:layout_constraintBottom_toBottomOf="@id/etCustomStepGoal"
        app:layout_constraintStart_toEndOf="@id/etCustomStepGoal"/>

    <!-- Adjustment Buttons -->
    <LinearLayout
        android:id="@+id/adjustmentButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCustomGoalLabel"
        android:layout_marginTop="32dp">

        <!-- Decrease Button -->
        <ImageButton
            android:id="@+id/btnDecreaseDailyGoal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_minus"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Giảm mục tiêu"
            android:elevation="4dp"/>

        <!-- Increase Button -->
        <ImageButton
            android:id="@+id/btnIncreaseDailyGoal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_plus"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Tăng mục tiêu"
            android:layout_marginStart="60dp"
            android:elevation="4dp"/>
    </LinearLayout>

    <!-- Nút Lưu mục tiêu --> 
    <androidx.cardview.widget.CardView
        android:id="@+id/saveButtonCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <Button
            android:id="@+id/btnSaveDailyGoal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Lưu mục tiêu"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#4CAF50"
            android:foreground="?attr/selectableItemBackground"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>