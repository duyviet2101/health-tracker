<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle - very light gray translucent -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20CCCCCC"/>
            <size android:width="320dp" android:height="320dp"/>
        </shape>
    </item>
    <!-- Middle circle - slightly more opaque gray -->
    <item android:left="50dp" android:top="50dp" android:right="50dp" android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#30AAAAAA"/>
        </shape>
    </item>
    <!-- Center black circle -->
    <item android:left="95dp" android:top="95dp" android:right="95dp" android:bottom="95dp">
        <shape android:shape="oval">
            <solid android:color="#000000"/>
        </shape>
    </item>
</layer-list> 